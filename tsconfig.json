{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "@loopback/build/config/tsconfig.common.json",
  "compilerOptions": {

    "outDir": "dist",
    "baseUrl": "./",
    "rootDirs": [
      "src"
    ],

    "preserveSymlinks": true,

    "declaration": false,
    "downlevelIteration": true,

    "target": "ESNext",
    "module": "ESNext",

    "types": [
      "node",
      "mocha",
      "moment"
    ],

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
  ]
}
